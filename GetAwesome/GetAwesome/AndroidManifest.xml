<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team20.getawesome"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="team20.getawesome.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="team20.getawesome.Fitness"
            android:label="@string/title_activity_fitness"
            android:parentActivityName="team20.getawesome.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="team20.getawesome.MainActivity" />
        </activity>
        <activity
            android:name="team20.getawesome.Health"
            android:label="@string/title_activity_health"
            android:parentActivityName="team20.getawesome.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="team20.getawesome.MainActivity" />
        </activity>
        <activity
            android:name="team20.getawesome.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:parentActivityName="team20.getawesome.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="team20.getawesome.MainActivity" />
        </activity>
    </application>

</manifest>